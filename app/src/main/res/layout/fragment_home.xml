<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeFragment">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="421dp"
        android:layout_height="266dp"
        android:src="@drawable/bg1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153" />

    <Button
        android:id="@+id/prebookTBtn"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:shadowColor="@color/black"
        android:text="Pre Book a Ticket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/getticketBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/myTicketBtn"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.205" />

    <Button
        android:id="@+id/getticketBtn"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:shadowColor="@color/black"
        android:text="Get a Ticket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/busLogBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.205" />

    <Button
        android:id="@+id/busLogBtn"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:shadowColor="@color/black"
        android:text="bus log"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mapBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/getticketBtn"
        app:layout_constraintVertical_bias="0.16" />

    <Button
        android:id="@+id/myTicketBtn"
        android:layout_width="101dp"
        android:layout_height="108dp"
        android:shadowColor="@color/black"
        android:text="My Ticket"
        app:layout_constraintBottom_toTopOf="@+id/mapBtn"
        app:layout_constraintEnd_toStartOf="@+id/busLogBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mapBtn"
        app:layout_constraintTop_toBottomOf="@+id/prebookTBtn"
        app:layout_constraintVertical_bias="0.52" />

    <Button
        android:id="@+id/mapBtn"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:shadowColor="@color/black"
        android:text="map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/busLogBtn"
        app:layout_constraintVertical_bias="0.241" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="268dp"
        android:layout_height="122dp"
        android:src="@drawable/ebusbooklogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

</androidx.constraintlayout.widget.ConstraintLayout>